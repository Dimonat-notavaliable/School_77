@model School_77.ViewModels.ScheduleIndexData
@if (Model.PersonType == "Parent")
{ Layout = "~/Views/Shared/_LayoutParent.cshtml"; }
else if (Model.PersonType == "Student")
{ Layout = "~/Views/Shared/_LayoutStudent.cshtml"; }
@{
    ViewBag.Title = "Дневник";
}
@{
    List<string> time = new List<string> { "8:00 - 8:40", "8:50 - 9:30", "9:40 - 10:20", "10:30 - 11:10", "11:30 - 12:10" };
    List<string> WeekDay = new List<string> { "Понедельник", "Вторник", "Среда", "Четверг", "Пятница" };
    List<IEnumerable<School_77.Models.Schedule>> Days = new List<IEnumerable<School_77.Models.Schedule>>
    {
        Model.Monday, Model.Tuesday, Model.Wednesday, Model.Thursday, Model.Friday
    };

    string calendarRaw = Context.Request.QueryString["calendar"];
    string student = Context.Request.QueryString["PersonID"];
    if (Model.PersonType == "Student")
    {
        student = Model.Id.ToString();
    }
    int year = 2022;
    int week = 0;
    DateTime ToDay = new DateTime(year, 1, 3);
    if (calendarRaw != null && calendarRaw.Length == 8)
    {
        year = Int32.Parse(calendarRaw.Substring(0, 4));
        week = Int32.Parse(calendarRaw.Substring(6, 2));
        DateTime jan1 = new DateTime(year, 1, 1);
        ToDay = jan1.AddDays(week * 7 - 5);
    }
    string next = "https://localhost:44382/Schedule/Student/"+ Model.Id + "?PersonID=" + student + "&calendar=2022-W" + (week + 1).ToString("00");
    string previous = "https://localhost:44382/Schedule/Student/" + Model.Id + "?PersonID=" + student + "&calendar=2022-W" + (week - 1).ToString("00");
    if (week < 1) { previous = "https://localhost:44382/Schedule/Student/" + Model.Id + "?PersonID=" + student + "&calendar=2022-W00"; }
}
<body>
    @using (Html.BeginForm("Student", "Schedule", FormMethod.Get))
    {
        <table border="0">
            <tr class="upper">
                <th align="center">
                    <font size="5" color=#222>Расписание занятий</font>
                    @Html.DropDownList("PersonID", null, htmlAttributes: new { @onchange = "this.form.submit()" })
                </th>
            </tr>
        </table>
        <br />
        <ul class="pager">
            <li class="previous">
                <a href=@previous>← Предыдущая неделя</a>
            </li>
            <li>
                <input type="week" name="calendar" onchange='this.form.submit()' value=@calendarRaw max="2022-W52" min="2022-W01">
            </li>
            <li class="next">
                <a href=@next>Следующая неделя →</a>
            </li>
        </ul>
    }
    @if (!(String.IsNullOrEmpty(calendarRaw) || String.IsNullOrEmpty(student)))
    {
        <table width="1200" border="2" id="basic">
            @for (int date = 0; date < 5; date++)
            {
                for (int i = 0; i < 5; i++)
                {
                <tr>
                    @if(i == 0)
                    {
                        <td class="Data" rowspan=5>@ToDay.ToString("dd.MM")</td>
                    <td class="Day" rowspan=5>@WeekDay[date]</td>
                    }           
                    <td class="Order">
                        @(i+1)
                    </td>
                    <td class="Time">
                        @time[i]
                    </td>
                    @if ((Days[date] != null) && (Days[date].Where(x => x.Order == i + 1).Any()))
                    {
                        int OrderSubjID = Days[date].Where(k => k.Order == i + 1).SingleOrDefault().SubjectID;
                        School_77.Models.Grade OrderGrade = Model.Grades.SingleOrDefault(x => x.SubjectID == OrderSubjID && x.Date == ToDay);
                        <td id="Subject">
                            @Days[date].Where(x => x.Order == i+1).SingleOrDefault().Subject.Name
                        </td>
                        <td class="grade">
                            @if (OrderGrade != null)
                            {
                                @OrderGrade.Value
                            }
                        </td>
                    }
                    else
                    {
                        <td id="Subject"></td>
                    }
                </tr>
                }
                ToDay = ToDay.AddDays(1);
            }
            <tr><td colspan="6"><br></td></tr>
            <tr>
                <td class="Data" rowspan=5>@ToDay.AddDays(1).ToString("dd.MM")</td>
                <td class="Day" rowspan=5>Суббота</td>
                <td id="Holiday" colspan="4">
                </td>
            </tr>
            @for (int i = 2; i <= 5; i++)
            {
                <tr>
                    <td id="Holiday" colspan="4">
                    </td>
                </tr>
            }
        </table>
        <br />
    }
</body>

<link rel="stylesheet" href="~/Content/schedule.css">

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $("#PersonID").each(function () {
        if ($('option', this).length < 2)
        {
            this.disabled = true;
        }
    });
</script>