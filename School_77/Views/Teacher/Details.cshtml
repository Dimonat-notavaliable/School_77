@model School_77.Models.Teacher

@{
    ViewBag.Title = "Информация";
    string subjects = "";
    string course;
    if (Model.Course != null)
    {
        course = Model.Course.Title;
        subjects = "Базовая подготовка";
    }
    else
    {
        course = "Не является кл. руководителем";
    }

    if (Model.Subjects.Any())
    {
        for (int i = 0; i < Model.Subjects.Count() - 1; i++)
        {
            subjects = subjects + Model.Subjects.ElementAt(i).Name + "; ";
        }
        subjects = subjects + Model.Subjects.Last().Name;
    }
}
<h2>Карточка сотрудника</h2>

<div class="card">
    <img id="photo" src="/profile.png">
    <table class="info">
        <tr>
            <th id="Name">ФИО сотрудника</th>
            <td>@Html.DisplayFor(model => model.FullName)</td>
        </tr>
        <tr>
            <th>Классное руководство</th>
            <td>
                @course
        </td>
        </tr>
        <tr>
            <th>Преподаваемые предметы</th>
            <td>@subjects</td>

        </tr>
</table>
</div>
<p>
    @Html.ActionLink("Назад", "Index")
</p>

<link rel="stylesheet" href="~/Content/PersonInfo.css">